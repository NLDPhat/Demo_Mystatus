	<div class="well">
		<div class="form-group" style="padding-left: 360px; padding-top: 100px;">
		  <%= form_tag sessions_path do%>
			<h5>Username</h5>
		    	<%= text_field_tag :Username,"", class: 'form-group', :style => 'width: 50%; height:40px' %>

		    <h5>Password</h5>
		    	<%= password_field_tag :Password,"", class: 'form-group', :style => 'width: 50%; height:40px' %> 

		    <div class="active">
			    <%= submit_tag 'Submit' , :class => 'btn btn-success' %>
			</div>
		  <% end%>
		</div>
	</div>
